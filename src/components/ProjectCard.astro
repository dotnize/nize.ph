---
import { Image } from "astro:assets";
import IconLink from "~/components/icons/IconLink.astro";
export interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
}

const { title, description, image, url } = Astro.props;
---

<a
  class="group flex flex-col gap-1"
  href={url}
  title={title}
  target="_blank"
  rel="noopener noreferrer"
>
  <div class="relative">
    <div
      class="absolute z-10 flex size-full flex-col items-center rounded-xl bg-black/20 opacity-0 transition-opacity duration-200 group-hover:opacity-80"
    >
      <IconLink class="my-auto size-8 stroke-4 text-white" />
    </div>
    <Image
      src={image || "https://placehold.co/300x200"}
      alt="Project Image"
      width={300}
      height={200}
      class="w-full rounded-xl transition-[filter] duration-200 group-hover:blur-[1px]"
    />
  </div>

  <h3 class="text-foreground text-lg font-semibold sm:text-xl">{title}</h3>
  <p class="text-xs sm:text-sm">{description}</p>
</a>
